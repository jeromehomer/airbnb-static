
<div class="banner text-center" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'background.jpg' %>);">
  <div class="banner-content">
    <h1>WELCOME HOME</h1>
    <h2>Rent unique places to stay from local hosts in 190+ countries.</h2>
    <form action ="#" class ="form-inline">
     <input type="text" class="form-control input-lg" placeholder="checkin">
     <input type="text" class="form-control input-lg" placeholder="checkout">
     <select name id class="form-control input-lg">
      <option value="1">1 person</option>
      <option value="2">2persons</option>
      <option value="3">3persons</option>
     </select>
     <input type="submit" class="btn btn-primary btn-lg" value="Search">
    </form>
  </div>
</div>
<!-- Your features code -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-lg-3">
      <%= image_tag "globe.png"%>
      <h3>Discover the world</h3>
      <p>The earth is your new home.</p>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
      <%= image_tag "dollar.png"%>
      <h3>Here goes the money</h3>
      <p>Secure payment directly on my banck account.</p>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
      <%= image_tag "beer.png"%>
      <h3>Get drunk with your hosts</h3>
      <p>Don't worry, cleaning is on them!</p>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-3">
      <%= image_tag "heart.png"%>
      <h3>Make new friends</h3>
      <p>and a lot of babies...</p>
    </div>
  </div>
</div>
<!-- Your cards code -->
<div class="wrapper-grey">
  <div class="cards">
    <div class="row">
      <% data.members.each do |member, infos| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.2) 50%), url(<%= image_path infos.city_image %>)">
            <div class="card-category"><%= infos.category%></div>
            <div class="card-description">
              <h3><%= infos.description %></h3>
              <p><%= infos.paragraphe %></p>
            </div>
            <%= image_tag infos.member_pic, class: "avatar" %>
            <%= link_to "#", "flats/#{member}.html", class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="newsletter">
  <h2>Want to hear great stuff?</h2>
  <p>Leave us your mail and get news from us</p>
  <form action="#" class="form-inline">
  <input type="email" placeholder="bob@gmail.com" class="form-control">
  <input type="submit" value="Sign In" class="btn btn-primary">
  </form>
</div>


